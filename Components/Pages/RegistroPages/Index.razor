@page "/Registro/Index"
@rendermode InteractiveServer
@inject NavigationManager navigationManager

<PageTitle>Registro Index</PageTitle>
<div class="container">
    <div class="card shadow-lg">
        @*Header*@
        <div class="card-header">
            <h5 class="card-title">Registro</h5>
        </div>
        @*Body*@
        <div class="card-body">
            @*Crear*@
            <a href="/Registro/Create" class="btn btn-primary">
                <span class="bi bi-plus-square mt-3"></span> Crear
            </a>
            @*Tabla*@
            <table class="table table-bordered mt-4">
                <thead class="table table-striped">
                    <tr>
                        <th>Observar</th>
                        <th>Editar</th>
                        <th>Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    @*Observar*@
                <td class="text-center">
                    <a href="#" class="btn bi bi-eye"></a>
                </td>
                    @*Editar*@
                <td class="text-center">
                    <a href="#" class="btn bi bi-pencil"></a>
                </td>
                    @*Eliminar*@
                <td class="text-center">
                    <a href="#" class="btn bi bi-trash"></a>
                </td>

                <a href="#"
                   class="btn btn-primary">
                    <span class="bi bi-plus-square mt-3"></span> Crear
                </a>
                <td class="text-center">
                    <a href="#" class="btn bi bi-eye"></a>
                </td>
                <td class="text-center">
                    <a href="#" class="btn bi bi-pencil-square"></a>
                </td>
                <td class="text-center">
                    <a href="#" class="btn bi bi-trash"></a>
                </td>

                <a href="#"
                   class="btn btn-primary">
                    <span class="bi bi-floppy mt-3"></span> Guardar
                </a>
                <a href="#"
                   class="btn btn-primary">
                    <span class="bi bi-arrow-left mt-3"></span> Volver
                </a>

                </tbody>
            </table>
        </div>
        @*Footer*@
        <div class="card-footer">
        </div>
    </div>
</div>

